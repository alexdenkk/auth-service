{
  "info": {
    "name": "Auth API Collection",
    "description": "API collection for authentication and health checks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health/",
          "host": ["{{base_url}}"],
          "path": ["health", ""]
        }
      }
    },
    {
      "name": "Auth Endpoints",
      "item": [
        {
          "name": "Sign In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/sign-in/",
              "host": ["{{base_url}}"],
              "path": ["auth", "sign-in", ""]
            }
          }
        },
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/sign-up/",
              "host": ["{{base_url}}"],
              "path": ["auth", "sign-up", ""]
            }
          }
        },
        {
          "name": "Get Self",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer your_token_here"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/self/",
              "host": ["{{base_url}}"],
              "path": ["auth", "self", ""]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "description": "Base URL for the API"
    }
  ]
}
